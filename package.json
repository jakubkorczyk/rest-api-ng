{
  "name": "rest-api-ng",
  "version": "0.0.1",
  "description": "",
  "main": "index.js",
  "scripts": {
    "start": "node ./dist/src/index.js",
    "compile": "rm -rf ./dist && tsc",
    "lint": "tslint -c tslint.json 'src/**/*.ts'",
    "format": "prettier --config prettierrc.json --write './**/*.ts'",
    "format:check": "prettier --config prettierrc.json --list-different './**/*.ts' && npm run lint",
    "test": "jest --detectOpenHandles",
    "test:coverage": "jest --noStackTrace --collectCoverage --no-cache",
    "compose": "npm run compose:build && npm run compose:up",
    "compose:up": "docker-compose up -d",
    "compose:down": "docker-compose down",
    "compose:build": "docker-compose build"
  },
  "author": "Jakub Korczyk",
  "license": "ISC",
  "engines": {
    "node": "8.x"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/jakubkorczyk/rest-api-ng"
  },
  "devDependencies": {
    "@types/dotenv": "^6.1.0",
    "@types/express": "^4.16.1",
    "@types/jest": "^24.0.9",
    "@types/joi": "^14.3.2",
    "@types/mongoose": "^5.3.20",
    "@types/node": "^11.9.5",
    "jest": "^24.1.0",
    "prettier": "^1.11.0",
    "supertest": "^3.4.2",
    "ts-jest": "^23.10.5",
    "tslint": "^5.9.1",
    "tslint-config-airbnb": "^5.7.0",
    "tslint-config-prettier": "^1.18.0",
    "typescript": "^3.3.3333"
  },
  "dependencies": {
    "body-parser": "^1.18.3",
    "dotenv": "^6.2.0",
    "express": "^4.16.4",
    "joi": "^14.3.1",
    "mongoose": "^5.4.16"
  },
  "jest": {
    "testEnvironment": "node",
    "globals": {
      "ts-jest": {
        "diagnostics": false
      }
    },
    "transformIgnorePatterns": [
      "<rootDir>/node_modules/",
      "<rootDir>/dist/"
    ],
    "testPathIgnorePatterns": [
      "<rootDir>/dist/"
    ],
    "modulePathIgnorePatterns": [
      "<rootDir>/dist/"
    ],
    "transform": {
      "^.+\\.ts?$": "ts-jest"
    },
    "testRegex": "(/__tests__/.*|(\\.|/)(test|spec))\\.(js?|ts?)$",
    "collectCoverageFrom": [
      "src/**/*.ts",
      "!src/**/*.d.ts",
      "!src/index.ts"
    ],
    "moduleFileExtensions": [
      "ts",
      "js",
      "json"
    ]
  }
}
