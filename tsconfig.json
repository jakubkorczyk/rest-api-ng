{
  "compileOnSave": false,
  "compilerOptions": {
    "alwaysStrict": true,
    "strictNullChecks": true,
    "noUnusedParameters": true,
    "noUnusedLocals": true,
    "noImplicitAny": true,
    "outDir": "dist",
    "rootDir": ".",
    "target": "es2017",
    "module": "commonjs",
    "moduleResolution": "node",
    "skipLibCheck": true,
    "declaration": false,
    "inlineSourceMap": true
  },
  "exclude": ["node_modules", "dist", "**/*.test.ts"],
  "include": ["src/**/*.ts"]
}
